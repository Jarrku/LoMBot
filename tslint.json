{
  "extends": ["tslint:recommended"],
  "rules": {
    "quotemark": [true, "double", "avoid-escape"],
    "member-access": [true, "no-public"],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-trailing-underscore",
      "allow-pascal-case"
    ],
    "object-literal-sort-keys": false,
    "no-console": [false],
    "curly": false,
    "interface-name": [false],
    "max-line-length": [160]
  }
}
